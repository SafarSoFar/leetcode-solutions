class Solution {
public:
    string processStr(string s) {
        string res = "";
        for(const auto& ch : s){
            if(islower(ch)){
                res += ch;
            }
            else if(ch == '#'){
                res += res;
            }
            else if(ch == '%'){
                reverse(res.begin(), res.end());
            }
            else if(ch == '*' && res.size()){
                res.erase(res.end()-1);
            }
        }
        return res;
    }
};
