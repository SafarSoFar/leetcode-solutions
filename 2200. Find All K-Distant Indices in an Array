class Solution {
public:
    vector<int> findKDistantIndices(vector<int>& nums, int key, int k) {
        set<int> s;
        vector<int> ans;
        int n = nums.size();
        for(int i = n-1; i >= 0; i--){
            if(nums[i] == key){
                for(int j = 0; j < n; j++){
                    if(abs(i-j) <= k)
                        s.insert(j);
                }       
            }
        }
        for(const auto& val : s){
            ans.push_back(val);
        }
        return ans;
    }
};
