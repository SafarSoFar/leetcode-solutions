class Solution {
public:
    int countConsistentStrings(string allowed, vector<string>& words) {
        int letters[26];
        int ans = 0;
        for(int i = 0; i < allowed.size();i++){
            letters[allowed[i]-'a']++;
        }
        for(int i = 0; i < words.size();i++){
            bool isValid = true;
            for(int j = 0; j < words[i].size();j++){
                if(letters[words[i][j] - 'a'] == 0){
                    isValid = false;
                    break;
                }
            }
            if(isValid){
                ans++;
            }
        }
        return ans;
    }
};
